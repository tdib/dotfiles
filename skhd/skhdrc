
# Increase/decrease window size (anchored top left, resizes from bottom right)
shift + alt - a : yabai -m window --resize right:-20:0
shift + alt - s : yabai -m window --resize bottom:0:20
shift + alt - w : yabai -m window --resize bottom:0:-20
shift + alt - d : yabai -m window --resize right:20:0

# Shift focus
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Quick apps
shift + alt - return : open -a "iTerm"
shift + alt - 1 : open -a "Arc"
shift + alt - 2 : open -a "Discord"
shift + alt - 3 : open -a "Spotify"
shift + alt - 4 : open -a "Visual Studio Code"
# shift + alt - 5 : open -a ""
# shift + alt - 6 : open -a ""
# shift + alt - 7 : open -a ""
# shift + alt - 8 : open -a ""
# shift + alt - 9 : open -a ""
# shift + alt - 0 : open -a ""

# Toggle window fullscreen zoom
shift + alt - f : yabai -m window --toggle zoom-fullscreen

# Toggle the current window's management by Yabai
shift + alt - t : yabai -m window --toggle float # (window remains in its position)
shift + alt - c : yabai -m window --toggle float --grid 4:4:1:1:2:2 # (window is centered after)

# Hide window
shift + alt - m : yabai -m window --minimize

# Swap window
# TODO: use --warp instead of --swap?
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Focus display?
ctrl + cmd - 1 : yabai -m window --display 1 yabai -m display --focus 1
ctrl + cmd - 2 : yabai -m window --display 2 yabai -m display --focus 2
ctrl + cmd - 3 : yabai -m window --display 3 yabai -m display --focus 3

# Toggle window split type?
shift + alt - z : yabai -m window --toggle split

# Rotate tree 90
shift + alt - r : yabai -m space --rotate 270
# Rotate tree -90
shift + alt - e : yabai -m space --rotate 90
# Mirror tree y-axis
shift + alt - y : yabai -m space --mirror y-axis
# Mirror tree x-axis
shift + alt - x : yabai -m space --mirror x-axis
