
# Shift focus between windows - if a window cannot be found in a
# given direction, try to find a screen in that direction
#alt - h : yabai -m window --focus west || yabai -m display --focus west
#alt - j : yabai -m window --focus south || yabai -m display --focus south
#alt - k : yabai -m window --focus north || yabai -m display --focus north
#alt - l : yabai -m window --focus east || yabai -m display --focus east

# Quick apps
shift + alt - return : open -a "iTerm"
shift + alt - 1 : open -a "Arc"
shift + alt - 2 : open -a "Discord"
shift + alt - 3 : open -a "Spotify"
shift + alt - 4 : open -a "Visual Studio Code"
shift + alt - 5 : open -a ""
shift + alt - 6 : open -a ""
shift + alt - 7 : open -a ""
shift + alt - 8 : open -a ""
shift + alt - 9 : open -a ""
shift + alt - 0 : open -a "Finder"

